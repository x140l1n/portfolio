{
  "root": true,
  "env": {
    "node": true
  },
  "extends": [
    "plugin:vue/essential",
    "eslint:recommended"
  ],
  "rules": {
    "no-inner-declarations": 0,
    "no-console": 0,
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "max-len": ["error", { "code": 120, "ignoreComments": true, "ignoreUrls": true }],
    "comma-dangle" : ["error", "never"],
    "no-irregular-whitespace": 0
  },
  "parserOptions": {
    "parser": "babel-eslint",
    "ecmaFeatures": {
      "legacyDecorators": true
    }
  }
}
